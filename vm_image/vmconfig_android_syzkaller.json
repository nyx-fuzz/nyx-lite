{
  "boot-source": {
    "kernel_image_path": "/tmp/common/vmlinux",
    "boot_args": "ro console=ttyS0 reboot=k panic=1 nomodules random.trust_cpu=on"
  },
  "drives": [
    {
      "drive_id": "rootfs",
      "path_on_host": "./wheezy.ext4",
      "is_root_device": true,
      "is_read_only": false,
      "io_engine": "Cow" 
    }
  ],
  "network-interfaces": [
  ],
  "machine-config": {
    "vcpu_count": 1,
    "mem_size_mib": 4096
  }
}
